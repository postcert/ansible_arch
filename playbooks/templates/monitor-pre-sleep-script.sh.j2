#!/bin/bash
# Script to set screens to 60Hz before sleep

# X11 check
if [ "$XDG_SESSION_TYPE" == "x11" ]; then
    # Add the commands generated by arandr for setting screens to 60Hz
    xrandr --output HDMI-0 --primary --mode 3840x2160 --rate 60
    xrandr --output DP-0 --mode 2560x1440 --rate 60
    xrandr --output DP-2 --mode 2560x1440 --rate 60

    /bin/sleep 1 # Would prefer ExecStartPost but it would delay Wayland sleep
fi
